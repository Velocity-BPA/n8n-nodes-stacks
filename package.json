{
  "name": "n8n-nodes-stacks",
  "version": "1.0.0",
  "description": "A comprehensive n8n community node for Stacks blockchain providing 19 resources and 100+ operations for STX, smart contracts, NFTs, sBTC, BNS, stacking, and more.",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "stacks",
    "blockchain",
    "stx",
    "bitcoin",
    "clarity",
    "smart-contracts",
    "nft",
    "sbtc",
    "bns",
    "stacking",
    "pox",
    "web3",
    "defi",
    "hiro-api"
  ],
  "license": "BUSL-1.1",
  "homepage": "https://velobpa.com",
  "author": {
    "name": "Velocity BPA",
    "email": "licensing@velobpa.com",
    "url": "https://velobpa.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Velocity-BPA/n8n-nodes-stacks.git"
  },
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=9.1"
  },
  "packageManager": "pnpm@9.1.4",
  "main": "dist/nodes/Stacks/Stacks.node.js",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/HiroApi.credentials.js",
      "dist/credentials/StacksNetwork.credentials.js",
      "dist/credentials/BitcoinConnection.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Stacks/Stacks.node.js",
      "dist/nodes/Stacks/StacksTrigger.node.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^4.0.2",
    "jest": "^29.7.0",
    "n8n-workflow": "*",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0"
  },
  "dependencies": {
    "axios": "^1.6.7"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
